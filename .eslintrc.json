{
  "env": {
    "es6": true
  },
  "ecmaFeatures": {
    "modules": true
  },
  "extends": "airbnb",
  "rules": {
    "quotes": ["error", "single"],
    "linebreak-style": "off",
    "no-console": ["error", { "allow": ["warn", "error", "info"] }],
    "import/no-dynamic-require": "off",
    "global-require": "off"
  }
}
